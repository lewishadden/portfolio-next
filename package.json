{
  "name": "portfolio-next",
  "description": "Lewis Hadden online portfolio built with Next.js",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "homepage": "https://portfolio.lewishadden.co.uk",
  "author": "Lewis Hadden <lewishadden@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git@github.com:lewishadden/portfolio-next.git"
  },
  "engines": {
    "node": "25.4.0",
    "npm": "11.9.0"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build && next-image-export-optimizer && npm run purgecss && next-sitemap",
    "purgecss": "purgecss -c purgecss.config.cjs",
    "analyze": "ANALYZE=true next build",
    "start": "serve out",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx && npm run lint:stylelint",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix && npm run lint:stylelint:fix",
    "lint:stylelint": "stylelint '**/*.{scss,css}' --cache",
    "lint:stylelint:fix": "stylelint '**/*.{scss,css}' --cache --fix",
    "jest": "jest",
    "jest:watch": "jest --watch",
    "prettier:check": "prettier --check \"**/*.{ts,tsx,js,json,css,yml,md}\"",
    "prettier:write": "prettier --write \"**/*.{ts,tsx,js,json,css,scss,yml,md}\"",
    "test": "npm run prettier:check && npm run lint && npm run typecheck && npm run jest"
  },
  "dependencies": {
    "@iconify/react": "^6.0.2",
    "animate.css": "^4.1.1",
    "formik": "^2.4.9",
    "next": "^16.1.6",
    "react": "^19.2.4",
    "react-awesome-slider": "^4.1.0",
    "react-dom": "^19.2.4",
    "react-type-animation": "^3.2.0",
    "react-vertical-timeline-component": "^3.6.0",
    "sass": "^1.97.3",
    "yup": "^1.7.1"
  },
  "devDependencies": {
    "@babel/core": "^7.28.6",
    "@next/bundle-analyzer": "^16.1.6",
    "@next/eslint-plugin-next": "^15.5.11",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.1.0",
    "@types/react": "^19.2.10",
    "@types/react-dom": "^19.2.3",
    "@types/react-google-recaptcha": "^2.1.9",
    "@types/react-vertical-timeline-component": "^3.3.6",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "babel-loader": "^10.0.0",
    "dotenv": "^17.2.3",
    "eslint": "^8.57.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jest": "^27.9.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-testing-library": "^7.15.4",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "next-image-export-optimizer": "^1.20.1",
    "next-sitemap": "^4.2.3",
    "postcss": "^8.5.6",
    "postcss-simple-vars": "^7.0.1",
    "prettier": "^3.8.1",
    "purgecss": "^8.0.0",
    "serve": "^14.2.5",
    "stylelint": "^17.1.0",
    "stylelint-config-standard-scss": "^17.0.0",
    "ts-jest": "^29.4.6",
    "typescript": "5.9.3",
    "webpack": "^5.104.1"
  }
}
